        if(!temp1.has(results[x].QuestionId)){
            temp1.add(results[x].QuestionId);
            temp2.push(results[x].Answer);
        }
    }
    var amountofquestions=temp2.length;

    var postedquestions = new Set();
    var answers = [];
    var counter=0;
    var choicecounter=0;
    %>

    <h1 class="container">Results for Test <%= testtitle[0].TestTitle %></h1>
    <h2 style="text-align: center"><%= results[0].TestTitle %></h2>
            <%
            var idWithValues = [];
            var userAnswers = [];
            for(let i=0;i<answer.length;i++){
                idWithValues.push(answer[i].QuestionId);
                userAnswers.push(answer[i].UserAnswer);
            }

            var nextCounter = 0;
            for(let x=0; x<results.length; x++){
                if(!postedquestions.has(results[x].QuestionId)){
                    postedquestions.add(results[x].QuestionId);
                    answers.push(results[x].Answer);
            %>      
                  <div class="container">
                      <h4><%= results[x].Question %></h4>
                      <% if(idWithValues.includes(results[x].QuestionId)){ %>
                        <p>Your Answer: <%= userAnswers[idWithValues.indexOf(results[x].QuestionId)]%> </p>
